@import '@radix-ui/colors/jade-dark';
@import '@radix-ui/colors/gray';
@import '@radix-ui/colors/sage-alpha';
@import '@radix-ui/colors/sage-dark';
@import '@radix-ui/colors/gray-dark';
@import '@radix-ui/colors/sage-dark-alpha';

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	:root {
		--background: var(--sage-2);
		--foreground: 222.2 84% 4.9%;

		--muted: 210 40% 96.1%;
		--muted-foreground: 215.4 16.3% 46.9%;

		--popover: 0 0% 100%;
		--popover-foreground: 222.2 84% 4.9%;

		--card: 0 0% 100%;
		--card-foreground: 222.2 84% 4.9%;

		--border: 214.3 31.8% 91.4%;
		--input: 214.3 31.8% 91.4%;

		--primary: 222.2 47.4% 11.2%;
		--primary-foreground: 210 40% 98%;

		--secondary: 210 40% 96.1%;
		--secondary-foreground: 222.2 47.4% 11.2%;

		--accent: 210 40% 96.1%;
		--accent-foreground: 222.2 47.4% 11.2%;

		--destructive: 0 72.2% 50.6%;
		--destructive-foreground: 210 40% 98%;

		--ring: 222.2 84% 4.9%;

		--radius: 1rem;
	}

	.dark {
		--background: var(--gray-1);
		--foreground: 210 40% 98%;

		--muted: 217.2 32.6% 17.5%;
		--muted-foreground: 215 20.2% 65.1%;

		--popover: 222.2 84% 4.9%;
		--popover-foreground: 210 40% 98%;

		--card: 222.2 84% 4.9%;
		--card-foreground: 210 40% 98%;

		--border: var(--sage-6);
		--input: 217.2 32.6% 17.5%;

		--primary: var(--jade-4);
		--primary-foreground: var(--jade-12);

		--secondary: 217.2 32.6% 17.5%;
		--secondary-foreground: 210 40% 98%;

		--accent: 217.2 32.6% 17.5%;
		--accent-foreground: 210 40% 98%;

		--destructive: 0 62.8% 30.6%;
		--destructive-foreground: 210 40% 98%;

		--ring: hsl(212.7, 26.8%, 83.9);
	}
}

@layer base {
	* {
		@apply border-border;
	}
	body {
		font-family: 'Instrument Sans Variable', sans-serif;
		@apply bg-background text-foreground;
	}

	blockquote {
		@apply !text-emerald-200;
	}
}

/* Copy Button Styles */
pre {
	position: relative;
	@apply min-w-fit;
}

pre .copy {
	position: absolute;
	top: 0.5rem;
	right: 0.5rem;
	width: 1.5rem;
	height: 1.5rem;
	background-color: #ffffff;
	border: none;
	border-radius: 0.25rem;
	cursor: pointer;
	display: flex;
	justify-content: center;
	align-items: center;
	transition: background-color 0.3s ease-in-out;
}

pre .copy:before {
	content: '';
	display: inline-block;
	width: 1rem;
	height: 1rem;
	background-image: url('/copy.svg');
	background-repeat: no-repeat;
	background-size: contain;
	background-position: center;
	transition: transform 0.3s ease-in-out;
}

pre .copy:hover {
	background-color: #00dd33;
}

pre .copy.copied:before {
	content: '';
	background-image: url('/check.svg');
	transform: scale(1.2);
}
